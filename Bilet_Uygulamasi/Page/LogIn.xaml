<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bilet_Uygulamasi.Page.LogIn"
      Title="ADMİN GİRİŞİ"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <StackLayout Grid.Row="1" Margin="150" Spacing="20">

            <Label Text="E-posta:" FontSize="18" />
            <Entry Placeholder="E-posta adresinizi girin" />

            <Label Text="Şifre:" FontSize="18" />
            <Entry Placeholder="Şifrenizi girin" />

            <Button Text="Giriş Yap" 
                    Clicked="Home_Clicked"
                    BackgroundColor="#2196F3"
                    TextColor="White" 
                    CornerRadius="5" 
                    FontSize="20" 
                    FontAttributes="Bold"
                    WidthRequest="200"/>
        </StackLayout>
    </Grid>
</ContentPage>